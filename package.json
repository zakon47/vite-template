{
  "name": "vite-example",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --no-cache --color --max-warnings 0",
    "serve": "serve -p 3000 -s dist",
    "preview": "vite preview",
    "lint-staged": "lint-staged",
    "husky-install": "husky install",
    "fix": "npx eslint --fix .",
    "format": "npm run fix && prettier --write .",
    "check-conflict": "npx eslint-config-prettier ./src/main.jsx",
    "check": "npm run check-conflict && npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run check-conflict",
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "sort-by": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "3.2.5",
    "sass": "^1.74.1",
    "serve": "^14.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
